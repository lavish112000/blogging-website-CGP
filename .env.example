# MongoDB Connection String
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGODB_URI=

# Auth0 (Netlify Auth0 Integration injects these automatically in the Netlify UI)
AUTH0_CLIENT_ID=
AUTH0_DOMAIN=

# Google Analytics (GA4)
# Client-side measurement ID used in app/layout.tsx scripts
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# GA4 Data API (server-side, admin-only reporting)
# Example: 123456789 (from GA4 Property settings)
GOOGLE_ANALYTICS_PROPERTY_ID=

# Preferred: base64-encoded service account JSON
# (Avoids multi-line env var pain.)
GOOGLE_ANALYTICS_CREDENTIALS_B64=

# Alternative (if not using B64): service account fields
GOOGLE_ANALYTICS_CLIENT_EMAIL=
GOOGLE_ANALYTICS_PRIVATE_KEY=
